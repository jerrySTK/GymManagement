<%= form_for [@client,@payment], remote:true do |f|%>
  <% if @payment.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @payment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="form-group">
      <%= f.label :fee_id%>
      <%= f.select :fee_id,@fees.map { |fee| [ fee.fee_type.name,fee.id,{'data-price' => fee.price}] }, {:include_blank => true}, {:class => 'form-control'} %>
    </div>
    <div class="form-group">
        <%= f.label :amount%>
        <%= f.text_field :amount, class:'form-control'%>
    </div>
    <div class="form-group">
        <%= f.label :init_date%>
        <%= f.date_field :init_date, {:class=>'form-control'}%>
    </div>
    <div class="form-group">
        <%= f.submit class:'btn btn-primary' %>
    </div>
<% end %>