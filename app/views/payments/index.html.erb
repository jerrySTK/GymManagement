<h1><%=t('payments.menu_label')%> <small><%=@client.full_name%></small></h1>
<br/>

<div class="row">
    <div class="col-sm-12">
        <%= link_to t('common.new'), new_client_payment_path(@client), class: "btn btn-primary"%>
    </div>
</div>
<br/>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Duracion</th>
                    <th>Cantidad</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <%@client.payments.each do | payment |%>
                    <tr>
                        <td><%=payment.created_at%></td>
                        <td><%=payment.duration%></td>
                        <td><%=payment.amount%></td>
                        <td></td>
                    </tr>
                <%end%>
            </tbody>
        </table>
    </div>
</div>
<%= link_to t('common.back'), clients_path%>
