<h1><%=t('payments.menu_label')%> <small><%=@client.full_name%></small></h1>
<br/>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Duracion</th>
                    <th>Cantidad</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <%@client.payments.each do | payment |%>
                    <tr>
                        <th><%=payment.created_at%></th>
                        <th><%=payment.duration%></th>
                        <th><%=payment.amount%></th>
                        <th></th>
                    </tr>
                <%end%>
            </tbody>
        </table>
    </div>
</div>
<%= link_to t('common.back'), clients_path%>
