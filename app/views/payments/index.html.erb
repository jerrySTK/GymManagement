<h1><%=t('payments.menu_label')%> <small><%=@client.full_name%></small></h1>
<br/>

<div class="row">
    <div class="col-sm-12">
        <%= link_to t('common.new'), new_client_payment_path(@client), remote: true, class: "btn btn-primary", data: {target:'#paymentModal',toggle:'modal'} %>
    </div>
</div>
<br/>
<div class="row">
    <div class="col-sm-12" id="paymentsList">
        <%= render 'list' %>
    </div>
</div>
<%= link_to t('common.back'), clients_path, class:'btn btn-secondary'%>


<div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New payment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="paymentFormContainer">
      </div>
    </div>
  </div>
</div>

